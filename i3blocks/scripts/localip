#!/usr/bin/env bash
IP=$(ip -4 addr show scope global | grep -oP '(?<=inet\s)\d+(\.\d+){3}' | head -n 1)

if [ -n "$IP" ]; then
    echo "F Leaked IP: $IP (1000Mb/s)"
    echo "F Leaked IP"
    echo "#00FF00"   # green
else
    echo "F Leaked IP: none"
    echo "F Leaked IP"
    echo "#FF0000"   # red
fi

